<resources>

    <style name="Theme.Review" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/primaryColorDark</item>
        <item name="colorPrimaryDark">@color/primaryDarkColorDark</item>
        <item name="colorOnPrimary">@color/primaryTextColorDark</item>
        <item name="colorSecondary">@color/primaryColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColorDark</item>
        <item name="android:fontFamily">@font/light</item>
        <item name="windowActionModeOverlay">true</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>

    </style>


    <style name="Theme.Review.customStatusBar" parent="Theme.Review.NoActionBar">
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
    </style>


    <style name="Theme.Review.Transparent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <style name="Theme.Review.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>