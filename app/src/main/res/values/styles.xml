<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ReviewDialogExpandedTitle">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="ReviewDialogCollapsedTitle">
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="HeadLine1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">25sp</item>
        <item name="font">@font/bold</item>
    </style>

    <style name="HeadLine2" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">23sp</item>
        <item name="font">@font/bold</item>
    </style>

    <style name="HeadLine3" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">19sp</item>
        <item name="font">@font/bold</item>
    </style>

    <style name="Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">18sp</item>
        <item name="font">@font/light</item>
    </style>

    <style name="Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">16sp</item>
        <item name="font">@font/light</item>
    </style>

    <style name="Tooltip" parent="TextAppearance.MaterialComponents.Tooltip">
        <item name="android:textSize">14sp</item>
        <item name="font">@font/light</item>
    </style>

    <style name="NavBar" parent="Widget.Design.NavigationView">
        <item name="itemIconTint">@drawable/nav_menu</item>
        <item name="itemTextColor">@drawable/nav_menu</item>
        <item name="background">@drawable/nav_menu</item>
        <item name="itemTextAppearance">@style/HeadLine2</item>
        <item name="itemTextAppearanceInactive">@style/HeadLine2</item>
        <item name="itemBackground">@drawable/nav_menu</item>
    </style>

    <style name="actionOverflowBtnStyle" parent="Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_moreoverflow_holo_white</item>
    </style>


    <style name="NavBarHeader">
        <item name="android:textColorSecondary">?attr/colorPrimaryDark</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>